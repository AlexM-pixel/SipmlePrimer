        <layer-list>
            <item android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="#D6D6D6" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient  android:endColor="#03DAC5" android:startColor="#E703DAC5" />
